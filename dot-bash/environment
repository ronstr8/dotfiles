if [ ! "$JAVA_HOME" ] ; then
	JAVA_BIN="$( which java 2>/dev/null )" ;
	if [ "$JAVA_BIN" ] ; then
		JAVA_HOME="$( dirname $( dirname $( readlink -f $JAVA_BIN ) ) )" ;
		if [ -d "$JAVA_HOME" ] ; then
			export JAVA_HOME
		fi
	fi
fi

