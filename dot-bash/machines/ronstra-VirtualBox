# Ensure snap aliases come first.

export PATH="/snap/bin:$PATH"

# Start an ssh-agent if none is running.

if false ; then

    ssh-add -l &> /dev/null ; ssh_add_exit_value=$?

    if [ $ssh_add_exit_value = 1 ] ; then
        ssh-add ~/.ssh/keyfiles/*.key
    elif [ $ssh_add_exit_value = 2 ] ; then
        eval $( ssh-agent -s )
        ssh-add ~/.ssh/keyfiles/*.key
    fi

fi

# Set the JAVA_HOME.

export JAVA_HOME='/usr/lib/jvm/java-8-openjdk-amd64/' # '/usr/lib/jvm/default-java/'

# Needed to get Cassandra cqlsh working.

export CQLSH_NO_BUNDLED=TRUE

# Remote Kubernetes control.

alias kubectl-etest="kubectl --kubeconfig=$HOME/.kube/etest.config"
alias kubectl-prod1="kubectl --kubeconfig=$HOME/.kube/prod1.config"

# vim: ft=sh
