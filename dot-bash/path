
MYROOT="$HOME/.local"
MYWORK="$HOME/work/adblade"

for dn in $( ls -d $HOME/src/perl/*/lib $MYROOT/{lib,share,}/perl/5.[0123456789]*/{,auto} $MYROOT/perl5 $MYROOT/site_perl 2> /dev/null ) ; do
	pathmunge PERL5LIB $dn after
done

for dn in /sbin /usr/sbin $HOME/bin $MYROOT/sbin $MYROOT/bin $MYWORK/bin ; do
	[ -d "$dn" ] && pathmunge PATH "$dn" after
done

if [ -d "/opt/gradle" ] ; then
    export GRADLE_HOME="/opt/gradle" ;
    pathmunge PATH "$GRADLE_HOME/bin" ;
fi

[ -d "/opt/perl5/bin" ] && pathmunge PATH "/opt/perl5/bin"
[ -d "$JAVA_HOME"     ] && pathmunge PATH "$JAVA_HOME/bin" after

## for dn in $HOME/man $HOME/perl/man ; do
##     pathmunge MANPATH $dn after
## done

## export WORK_CVS_CHECKOUTS="$HOME/work/kanoodle/checkouts"
## pathmunge PERL5LIB $WORK_CVS_CHECKOUTS/libkanoodle
## pathmunge PATH     $WORK_CVS_CHECKOUTS/kdev/prod/scripts
## pathmunge PERL5LIB $HOME/lib/perl

export PERL5LIB PATH MANPATH

