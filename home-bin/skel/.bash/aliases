# alias ack='ack-grep -a'
if ( ! type ack &>/dev/null ) ; then
	if ( type ack-grep &>/dev/null ) ; then
		alias ack='ack-grep'
	fi
fi

alias biosinfo='sudo dmidecode | head'
alias pstop='ps axo pid,user,group,priority,nice,vsz,rsz,share,stat,pcpu,pmem,time,cmd' ## PID USER PR NI VIRT RES SHR S %CPU %MEM TIME+ COMMAND
alias psthr='ps axms'

