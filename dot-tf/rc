;;; Enable windowing mode.
/visual on

;;; Enable paging
/more on

;;; Enable suppression of introductory MUD text.
/quiet off

/wrapspace 2

;;; Disable old-style slash interpretation
;;; I recommend this unless you have old macros containing multiple slashes.
/set oldslash=off

;;; Enter the directory where you keep your tf files.
/cd ~/.tf/lib

;;; Load files.

/load mcp21.tf
/load mcp-negotiate.tf
/load simpleedit.tf
/load local-edit.tf
/load idler.tf

/def WORLDFILE	= ~/.tf/worlds.tf
/def BINDFILE	= ~/.tf/bind.tf

/loadworld
/loadbind

;;; Stupid tf keeps disconnecting.
; /repeat -n -300 i ;ctime()
/idler

